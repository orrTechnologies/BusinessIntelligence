@using System.Web.Configuration
@model BusinessInsights.Models.FacebookDashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dashboard</h2>
<div class="row">
    <div class="col-sm-12 col-md-2">
        <div class="profile-picture">
            <img src="@Model.Page.ImageURL" />
        </div>
    </div>
    <div class="col-sm-12 col-md-6">
        @foreach (var item in Model.Posts)
        {
            <div class="post">
                <div class="post-user-info">
                    <span class="post-user-info post-from-picture">
                        <img src="@item.PictureUrl" />
                    </span>
                    <span class="post-user-info post-from-name">
                        @Html.DisplayFor(modelItem => item.FromName)
                    </span>
                </div>

                <div class="post-message">
                    @Html.DisplayFor(modelItem => item.Message)
                </div>
            </div>
        }

    </div>
</div>


    <style>
        body {
            background-color: #c9d0d6;
        }

        .post {
            background-color: #fff;
            border: 1px solid;
            border-color: #e5e6e9 #dfe0e4 #d0d1d5;
            padding: 12px;
            margin-bottom: 10px;
        }

        .post-user-info.post-from-picture img {
            height: 36px;
            width: 36px;
        }
    </style>
